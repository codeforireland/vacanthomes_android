<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_third_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentThirdDetails">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/third_vertical_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/fragment_step_third_text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Please check if all data are correct"
            style="@style/TextMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_step_third_text_typeHome_label"
            style="@style/TextSummaryLabel"
            android:text="Type home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_info" />

        <TextView
            android:id="@+id/fragment_step_third_text_typeHome_value"
            style="@style/TextSummaryValue"
            android:text="specific type"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_step_third_text_typeHome_label"
            app:layout_constraintStart_toStartOf="@+id/third_vertical_middle"
            app:layout_constraintTop_toTopOf="@+id/fragment_step_third_text_typeHome_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_grass_label"
            style="@style/TextSummaryLabel"
            android:text="Grass overgrown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_typeHome_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_grass_value"
            style="@style/TextSummaryValue"
            android:text="yes"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_step_third_text_grass_label"
            app:layout_constraintStart_toStartOf="@+id/third_vertical_middle"
            app:layout_constraintTop_toTopOf="@+id/fragment_step_third_text_grass_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_windows_label"
            style="@style/TextSummaryLabel"
            android:text="Windows boarded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_grass_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_windows_value"
            style="@style/TextSummaryValue"
            android:text="yes"
            app:layout_constraintStart_toStartOf="@+id/third_vertical_middle"
            app:layout_constraintTop_toTopOf="@+id/fragment_step_third_text_windows_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_activity_label"
            style="@style/TextSummaryLabel"
            android:text="Visible activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_windows_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_activity_value"
            style="@style/TextSummaryValue"
            android:text="yes"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_step_third_text_activity_label"
            app:layout_constraintStart_toStartOf="@+id/third_vertical_middle"
            app:layout_constraintTop_toTopOf="@+id/fragment_step_third_text_activity_label" />

        <TextView
            android:id="@+id/fragment_step_third_text_comment_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="@style/TextMedium"
            android:padding="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_activity_label" />

        <ImageView
            android:id="@+id/fragment_step_third_imageView_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/codeforireland"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_step_third_text_comment_value" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>